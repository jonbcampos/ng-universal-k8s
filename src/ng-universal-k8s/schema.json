{
    "$schema": "http://json-schema.org/schema",
    "id": "ng-universal-k8s",
    "title": "A schematic to add k8s functionality to Angular Universal.",
    "type": "object",
    "properties": {
        "project": {
            "type": "string",
            "description": "The name of the project.",
            "$default": {
                "$source": "projectName"
            }
        },
        "includeLogging": {
            "type": "boolean",
            "description": "Flag to include logging support.",
            "default": true
        },
        "containerPort": {
            "type": "string",
            "description": "Port to expose for the container.",
            "default": "4000"
        }
    },
    "additionalProperties": true
}